<Window x:Class="WlosyMniamMniam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hair Calculator" Height="350" Width="525" Background="Gray">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Gęstość włosów (włosy/cm2):" />
            <TextBox x:Name="HairDensityTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Obwód głowy (cm):" />
            <TextBox x:Name="HeadCircumferenceTextBox" Margin="0,5,0,10" />

            <TextBlock Text="Wysokość czoła (cm):" />
            <TextBox x:Name="ForeheadHeightTextBox" Margin="0,5,0,10" />

            <Button Content="Oblicz" Click="Calculate_Click" Margin="0,5,0,10" />
            <Button Content="Resetuj" Click="Reset_Click" Margin="0,5,0,10" />

            <TextBlock Text="Szacunkowa liczba włosów:" />
            <TextBlock x:Name="EstimatedHairCountTextBlock" FontWeight="Bold" Margin="0,5,0,10" />

            <TextBlock Text="Procentowa różnica względem średniej:" />
            <TextBlock x:Name="PercentageDifferenceTextBlock" FontWeight="Bold" Margin="0,5,0,10" />
        </StackPanel>
    </Grid>
</Window>